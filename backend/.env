# Configuración de Base de Datos Productiva
DB_USER=aeropuerto
DB_PASSWORD=aeropuerto
DB_CONNECT_STRING=localhost:1521/orcl

# Configuración de Base de Datos Réplica
DB_REPLICA_USER=aeropuerto_replica
DB_REPLICA_PASSWORD=aeropuerto_replica
DB_REPLICA_CONNECT_STRING=localhost:1521/orcl_replica

# Configuración de API
API_PORT=3000
API_URL=http://localhost:3000

# Configuración de PORT
PORT=3000
NODE_ENV=production

# Base de datos
DB_HOST=your-db-host
DB_PORT=1521
DB_SERVICE=orcl
DB_USER=system
DB_PASSWORD=oracle

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# SMTP
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=your-twilio-number

# Frontend
FRONTEND_URL=https://aeropuerto-internacional.com

# CORS
CORS_ORIGIN=https://aeropuerto-internacional.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=50

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Security
SECURITY_PASSWORD_SALT_ROUNDS=10
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_PASSWORD_MAX_LENGTH=100
SECURITY_PASSWORD_REQUIRE_SPECIAL=true
SECURITY_PASSWORD_REQUIRE_NUMBER=true
SECURITY_PASSWORD_REQUIRE_UPPER=true
SECURITY_PASSWORD_REQUIRE_LOWER=true

# Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key
NEW_RELIC_APP_NAME=Aeropuerto Internacional

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=100mb

# Session
SESSION_TIMEOUT=86400
SESSION_SECRET=your-session-secret

# Audit
AUDIT_LOG_RETENTION_DAYS=30
AUDIT_MAX_LOGS_PER_DAY=1000

# Error Handling
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_SERVICE=sentry
ERROR_REPORTING_DSN=your-sentry-dsn

# Configuración de Seguridad
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# Configuración de Reportes
REPORTS_PATH=./reports
REPORTS_FORMAT=pdf
